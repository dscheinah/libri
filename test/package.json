{
  "devDependencies": {
    "@babel/preset-env": "^7.14.5",
    "babel-jest": "^27.0.2",
    "jest": "^27.0.4"
  },
  "jest": {
    "rootDir": "..",
    "moduleDirectories": [
      "node_modules",
      "public"
    ],
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "public/js/**/*.js",
      "public/pages/**/*.js"
    ],
    "coverageDirectory": "test/coverage",
    "setupFiles": [
      "./test/public/setup.js"
    ]
  },
  "scripts": {
    "test": "jest",
    "test-coverage": "jest --collect-coverage"
  }
}
